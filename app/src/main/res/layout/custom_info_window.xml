<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="1dp"
    android:background="@drawable/semi_rounded_white"
    >

    <TextView
        android:id="@+id/tv_info_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detection_info_time"
        android:textColor="@color/primary_second"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_info_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/location_unknown"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_info_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_info_time" />


</androidx.constraintlayout.widget.ConstraintLayout>